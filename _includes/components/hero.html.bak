{% assign hero_class = "" %}
{% if page.hero_size == "small" %}
    {% assign hero_class = "vh-50" %}
{% elsif page.hero_size == "large" %}
    {% assign hero_class = "vh-100" %}
{% else %}
    {% assign hero_class = "vh-75" %}
{% endif %}

<section class="hero position-relative {{ hero_class }} {% if page.hero_class %}{{ page.hero_class }}{% endif %}">
    {% if page.hero_slides %}
    <!-- Slider Hero -->
    <div class="hero-slider">
        {% for slide in page.hero_slides %}
        <div class="hero-slide {% if forloop.first %}active{% endif %}" 
             style="background-image: url('{{ slide.image }}');">
            <div class="hero-content container h-100">
                <div class="row h-100 align-items-center">
                    <div class="col-12 {% if slide.align == 'left' %}text-start{% elsif slide.align == 'right' %}text-end{% else %}text-center{% endif %} text-light">
                        {% if slide.subtitle %}<p class="h4 mb-3 text-primary">{{ slide.subtitle }}</p>{% endif %}
                        <h1 class="display-4 fw-bold mb-4">{{ slide.title }}</h1>
                        {% if slide.description %}<p class="lead mb-4">{{ slide.description }}</p>{% endif %}
                        {% if slide.cta_text %}
                        <a href="{{ slide.cta_url }}" class="btn btn-primary btn-lg">
                            {{ slide.cta_text }}
                        </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}

        {% if page.hero_slides.size > 1 %}
        <!-- Slider Controls -->
        <div class="hero-controls position-absolute bottom-0 start-50 translate-middle-x mb-4">
            {% for slide in page.hero_slides %}
            <button class="btn btn-light btn-sm mx-1 {% if forloop.first %}active{% endif %}" 
                    data-slide="{{ forloop.index }}" 
                    aria-label="Go to slide {{ forloop.index }}">
            </button>
            {% endfor %}
        </div>
        {% endif %}
    </div>
    {% else %}
    <!-- Static Hero -->
    <div class="hero-static" {% if page.hero_image %}style="background-image: url('{{ page.hero_image }}');"{% endif %}>
        <div class="hero-content container h-100">
            <div class="row h-100 align-items-center">
                <div class="col-12 {% if page.hero_align == 'left' %}text-start{% elsif page.hero_align == 'right' %}text-end{% else %}text-center{% endif %} text-light">
                    {% if page.hero_subtitle %}<p class="h4 mb-3 text-primary">{{ page.hero_subtitle }}</p>{% endif %}
                    <h1 class="display-4 fw-bold mb-4">{{ page.hero_title | default: page.title }}</h1>
                    {% if page.hero_description %}<p class="lead mb-4">{{ page.hero_description }}</p>{% endif %}
                    {% if page.hero_cta_text %}
                    <a href="{{ page.hero_cta_url }}" class="btn btn-primary btn-lg">
                        {{ page.hero_cta_text }}
                    </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    {% endif %}

    {% if page.hero_overlay %}
    <div class="hero-overlay"></div>
    {% endif %}
</section>